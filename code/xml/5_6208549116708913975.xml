<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Log">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:backgroundTint="@color/white">
            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:text="Routine Checkup.."
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                >
            </TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:text="Blood Pressure"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:textSize="15sp"
                    >
                </TextView>
                <EditText
                    android:id="@+id/edit1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:gravity="center"
                    android:layout_marginLeft="2dp"
                    android:textSize="15dp"
                    android:textStyle="normal"
                    android:textColorHint="#063B7C"
                    android:textColor="@color/black"
                    android:inputType="number"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Sugar Level"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:textSize="15sp"
                    >
                </TextView>
                <EditText
                    android:id="@+id/edit2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColorHint="#063B7C"
                    android:textColor="@color/black"
                    android:inputType="number"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:text="Temperature('F)"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:textSize="15sp"
                    >
                </TextView>
                <EditText
                    android:id="@+id/edit3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColorHint="#063B7C"
                    android:textColor="@color/black"
                    android:inputType="number"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:text="Oxygen Level"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:textSize="15sp"
                    >
                </TextView>
                <EditText
                    android:id="@+id/edit4"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:gravity="center"
                    android:layout_marginLeft="2dp"
                    android:textSize="15dp"
                    android:textColorHint="#063B7C"
                    android:textColor="@color/black"
                    android:inputType="number"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/check"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:background="@drawable/back"

                android:layout_marginRight="20dp"
                android:textSize="15dp"
                android:text="Check"
                android:layout_gravity="right"
                android:textColor="@color/white" />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/textview"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:text="Your Test Results are :" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/res"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/human"
                android:layout_marginTop="40dp"
                />
            <ImageView
                android:id="@+id/img2"
                android:layout_marginTop="02dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/scope"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView

                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:id="@+id/doctor"
                    android:textSize="35sp"
                    android:background="@drawable/doctor"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    >
                </TextView>
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="05dp"
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/back"
                    android:textColor="@color/white"
                    android:text="Doctor And Consultance"
                    android:textStyle="bold"
                    >

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView

                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:id="@+id/yoga"
                    android:textSize="35sp"
                    android:background="@drawable/yoga"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    >
                </TextView>
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="05dp"
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/back"
                    android:textColor="@color/white"
                    android:text="Yoga And Meditation"
                    android:textStyle="bold"
                    >
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView

                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:id="@+id/alarm"
                    android:textSize="35sp"
                    android:background="@drawable/alarm"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    >
                </TextView>
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/back"
                    android:textColor="@color/white"
                    android:text="Set Alarm And Reminders"
                    android:textStyle="bold"
                    >

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView

                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:id="@+id/covid"
                    android:textSize="35sp"
                    android:background="@drawable/essential"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    >
                </TextView>
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="05dp"
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/back"
                    android:textColor="@color/white"
                    android:text="Covid -19 Essentials"
                    android:textStyle="bold"
                    >
                </TextView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>